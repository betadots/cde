# https://registry.terraform.io/providers/bpg/proxmox/latest/docs#api-token-authentication

proxmox = {
  endpoint  = "<url to api endpoint"
  api_token = "<api token>"
}

ssh = {
  user       = "<username>"
  public_key = "<path to public key>"     # "~/.ssh/id_ed25519.pub"
}

sshfs = {
  user     = "<username>"
  key_file = "<path to private key file>"     # e.g. "~/.ssh/id_ed25519.terraform"
}
